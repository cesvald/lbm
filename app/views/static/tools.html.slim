		#container-venture-course.tools-container
			.tools-wrapper
				- for i in 1..10
					- if t(".venture_course.tool_#{i}.link", default: "").present?
						.tool-element
							= link_to t(".venture_course.tool_#{i}.link", default: "#"), class: "tool-link", target: "_blank" do
								- if t(".venture_course.tool_#{i}.image", default: "").present?
									= image_tag t(".venture_course.tool_#{i}.image"), class: 'tool-image'
								- else
									= image_tag 'lbm/tool-pdf-default.png', class: 'tool-image'
								p.tool-title= t(".venture_course.tool_1.title")

		#container-about-crowdfunding.tools-container
