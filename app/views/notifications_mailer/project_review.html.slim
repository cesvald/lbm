	- review_comments_html = raw t('notifications.review_comments', review_comments: @notification.mail_params[:review_comments])
- else
	- review_comments_html = ""
/= raw t('notifications.review_comments', review_comments: review_comments)
= t('notifications.project_review.text_html', name: project.user.display_name, project_link: link_to(project.name, project_by_slug_url(permalink: project.permalink)), review_comments_html: review_comments_html)